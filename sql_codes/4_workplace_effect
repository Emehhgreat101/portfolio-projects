/** average of mental_health_absence = 7 **/

/** WORKPLACE FACTOR THAT CONTRIBUTES MOST TO MENTAL HEALTH ABSENCES**/

SELECT
    COUNT(mental_health_absences) mha_counts,
    workplace_factor
FROM
    healthcare_data
WHERE
    mental_health_absences >= 7
GROUP BY
    workplace_factor
ORDER BY
    mha_counts DESC;

/** DEPARTMENTS WITH HEAVY WORKLOAD FACTOR**/
SELECT
    COUNT(*) AS workload_count,
    department
FROM 
    healthcare_data
WHERE
    workplace_factor = 'Heavy Workload'
GROUP BY
    department
ORDER BY
    workload_count DESC;


/** DEPARTMENTS WITH POOR WORK ENVIRONMENT FACTOR**/
SELECT
    COUNT(*) AS work_envi_count,
    department
FROM 
    healthcare_data
WHERE
    workplace_factor = 'Poor Work Environment'
GROUP BY
    department
ORDER BY
    work_envi_count DESC;


/** DEPARTMENTS WITH CAREER STAGNATION FACTOR**/
SELECT
    COUNT(*) AS career_count,
    department
FROM 
    healthcare_data
WHERE
    workplace_factor = 'Career Stagnation'
GROUP BY
    department
ORDER BY
    career_count DESC;